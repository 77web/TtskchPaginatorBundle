{% extends 'base.html.twig' %}

{% block content %}
  <ol class="breadcrumb">
    <li class="breadcrumb-item"></li>
    <li class="breadcrumb-item active">
      <a href="{{ path('user_index') }}">Users</a>
    </li>
  </ol>

  <table class="table table-sm table-hover">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
      <tr>
        <td>{{ user.id }}</td>
        <td>
          <a href="{{ path('user_show', {id: user.id}) }}">{{ user.name }}</a>
        </td>
        <td>{{ user.email }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
